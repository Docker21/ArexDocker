mysqlServeur:
 image: mysql
 environment:
  - MYSQL_ROOT_PASSWORD=lotfi
ports:
  - 6603:3306
  - 6604:3306



phpServeur:
 image: jprjr/php-fpm
 volumes:
  - /c/Users/Tyller/Docker/projet_tuto/web/:/srv/http
 links:
  - mysqlServeur:mysql
 ports:
  - 8888:8888



webServeur:
    build: apache
    links:
        - phpServeur:phpServeur
    ports:
        - 80:80
    volumes:
        - /var/www:/var/www/local.dev
        - /var/www/docker/php.ini:/etc/php5/apache2/conf.d/30-custom.ini
        - /var/www/docker/sites:/etc/apache2/sites-enabled
    environment:
        - ALLOW_OVERRIDE=true
    command: apache2 -c /apache2.conf

phpmyadmin:
 image: corbinu/docker-phpmyadmin
 environment:
  - MYSQL_USERNAME=root
 ports:
  - 8181:80
 links:
  - mysqlServeur:mysql
